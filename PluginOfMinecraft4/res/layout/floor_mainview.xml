<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingTop="@dimen/dp20">
    <ScrollView
            android:scrollbars="none"
            android:layout_width="@dimen/dp90"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/float_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp3">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:src="@drawable/icon"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_marginLeft="5dp">
                    <TextView
                            android:textColor="#ff6caf3b"
                            android:textSize="11sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="GG助手"/>
                    <TextView
                            android:textColor="#ffffffff"
                            android:layout_marginTop="2dp"
                            android:textSize="8sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="我的世界"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
<!--                 <ImageView
                        android:id="@+id/minimum"
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25"
                        android:layout_gravity="left"
                        android:src="@drawable/ic_minimun"/>
                <ImageView
                        android:id="@+id/close"
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/ic_close"/> -->
            </RelativeLayout>
            <RadioGroup android:id="@+id/RadioMenus"
                        android:orientation="vertical"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                <RadioButton android:id="@+id/RadioMenuRole"
                          	android:checked="true"
                             android:layout_width="fill_parent"
                             android:layout_height="@dimen/float_tab_high"
                             android:text="角色"
                             style="@style/value_button_float_radio_exex"
                             android:drawableLeft="@drawable/ic_float_menu_role_true"/>
                <RadioButton android:id="@+id/RadioMenuGame"
                             android:layout_width="fill_parent"
                             android:layout_height="@dimen/float_tab_high"
                             android:text="游戏"
                             style="@style/value_button_float_radio_exex"
                             android:drawableLeft="@drawable/ic_float_menu_common_true"/>
                <RadioButton android:id="@+id/RadioMenuDeliver"
                             android:layout_width="fill_parent"
                             android:layout_height="@dimen/float_tab_high"
                             android:text="传送"
                             style="@style/value_button_float_radio_exex"
                             android:drawableLeft="@drawable/ic_float_menu_deliver_true"/>
                <RadioButton android:id="@+id/RadioMenuPack"
                             android:layout_width="fill_parent"
                             android:layout_height="@dimen/float_tab_high"
                             android:text="物品"
                             style="@style/value_button_float_radio_exex"
                             android:drawableLeft="@drawable/ic_float_menu_packtrue"/>
                 <RadioButton android:id="@+id/RadioMenuCapshot"
                             android:layout_width="fill_parent"
                             android:layout_height="@dimen/float_tab_high"
                             android:text="截图"
                             style="@style/value_button_float_radio_exex"
                             android:drawableLeft="@drawable/ic_float_menu_capstrue"/>
                 <View android:background="@color/float_split_line" android:layout_width="fill_parent" android:layout_height="0.5dip" />
                    <TextView 
                         	 android:id="@+id/minimum"
                             android:layout_width="fill_parent"
                             android:checked="false"
                             android:layout_height="@dimen/float_tab_high"
                             android:text="隐藏"
                             style="@style/value_button_float_radio_exex"
                             android:drawableLeft="@drawable/ic_minimun"/>
                       <TextView 
                           	 android:id="@+id/close"
                             android:layout_width="fill_parent"
                             android:layout_height="@dimen/float_tab_high"
                             android:checked="false"
                             android:text="返回"
                             style="@style/value_button_float_radio_exex"
                             android:drawableLeft="@drawable/ic_close"/>
                       
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
    <FrameLayout android:id="@+id/floatLayoutRoleFrame"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
    <FrameLayout android:id="@+id/floatLayoutGameFrame"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
    <FrameLayout android:id="@+id/floatLayoutFrame"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
</LinearLayout>
