<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/float_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/floatScreenShotOptionLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="10.0dip"
        android:orientation="horizontal" >
        <TextView
            android:visibility="gone"
            android:id="@+id/floatCapshotCancel"
            style="@style/value_button_float_common_style01"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:text="不保存"
            android:textSize="12.0sp" />

          <Button
              android:id="@+id/floatCapshotSave"
              style="@style/value_button_float_common_style01"
              android:layout_width="120dp"
              android:layout_height="40dp"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              android:drawableLeft="@drawable/ic_dropmenu_selector"
              android:paddingLeft="10dip"
              android:paddingRight="10dip"
              android:text="保存截图" />

          <Button
              android:id="@+id/floatBtnCapshotStart"
              style="@style/value_button_float_common_style01"
              android:layout_width="120dp"
              android:layout_height="40dp"
              android:layout_alignParentBottom="true"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="10dp"
              android:drawableLeft="@drawable/ic_float_capshot"
              android:paddingLeft="10dip"
              android:paddingRight="10dip"
              android:text="点击截屏" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/floatBtnCapshotLayout"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/floatImageCapshot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10.0dip"
            android:adjustViewBounds="true"
            android:background="@drawable/style_bg_capshot"
            android:padding="4.0dip"
            android:src="@drawable/ic_unknown"
            android:visibility="visible" />
        </RelativeLayout>

</LinearLayout>