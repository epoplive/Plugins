<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/float_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivGoBack"
            style="@style/value_button_green01"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:gravity="center"
            android:src="@drawable/ic_guide_back" />

        <ImageView
            android:id="@+id/ivGoForward"
            style="@style/value_button_green01"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:gravity="center"
            android:src="@drawable/ic_guide_forword" />

        <ImageView
            android:id="@+id/ivRefresh"
            style="@style/value_button_green01"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:gravity="center"
            android:src="@drawable/ic_guide_refresh" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLength="20"
            android:singleLine="true"
            android:text="GG助手_泰拉瑞亚"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivHome"
            style="@style/value_button_green01"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:src="@drawable/ic_guide_home" />

        <ImageView
            android:id="@+id/ivMin"
            style="@style/value_button_green01"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:src="@drawable/ic_guide_min" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:max="1000" />

    <WebView
        android:id="@+id/webView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>