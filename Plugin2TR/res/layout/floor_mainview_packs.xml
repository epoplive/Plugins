<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/float_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/packItemCount"
            android:layout_width="25.0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="12.0sp" />

        <SeekBar
            android:id="@+id/packSeekbarItemCount"
            style="@style/value_seekbar_base_float"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.0"
            android:max="99" />

        <TextView
            android:id="@+id/packBtnAddItem"
            style="@style/value_button_float_common_style01"
            android:layout_width="50.0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="6.0dip"
            android:layout_marginTop="6.0dip"
            android:text="添加" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/packEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.0"
            android:gravity="center"
            android:hint="搜索物品名字"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/packSearch"
            style="@style/value_button_float_common_style01"
            android:layout_width="50.0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="搜索" />

        <TextView
            android:id="@+id/packClear"
            style="@style/value_button_float_common_style01"
            android:layout_width="50.0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="清除" />
    </LinearLayout>

    <GridView
        android:id="@+id/packGridViewItem"
        style="@style/value_gridview_base"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:scrollbars="vertical"
        android:horizontalSpacing="3.0dip"
        android:numColumns="6"
        android:verticalSpacing="3.0dip" />

</LinearLayout>